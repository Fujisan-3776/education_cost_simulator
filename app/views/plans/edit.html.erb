                <p class="item_new"><%= f.collection_select(:university_job_hunting_id, UniversityJobHunting.all, :id, :name, {}, {class:"hoge", id:"fuga"}) %></p> 
              </div>
              <div class = 'pulldown'> 
                <p class="item_new">・大学院受験</p>
                <p class="item_new"><%= f.collection_select(:university_examination_id, UniversityExamination.all, :id, :name, {}, {class:"hoge", id:"fuga"}) %></p> 
              </div>
            </div>

            <div class = 'kind_of_school graduate_school'>
              <h2>大学院</h2>
              <div class = 'pulldown'>
                <p class="item_new">・学校の種類</p>
                <p class="item_new"><%= f.collection_select(:graduate_school_id, GraduateSchool.all, :id, :name, {}, {class:"hoge", id:"fuga"}) %></p>
              </div>
              <div class = 'pulldown'> 
                <p class="item_new">・就活</p>
                <p class="item_new"><%= f.collection_select(:graduate_school_job_hunting_id, GraduateSchoolJobHunting.all, :id, :name, {}, {class:"hoge", id:"fuga"}) %></p> 
              </div>
            </div>
            
        </div>

        <div class="income">
        </div>

      <div class = "btn_design btn-start ">
          <%= f.submit "結果" ,class:"link_to_result" %>
      </div>
      <% end %>
    </div>

    <div class="body_register_right">
      <div class="image_nursery_kindergarten">
      </div>

      <div class="image_elementary">
      </div>

      <div class="image_junior_high">
      </div>

      <div class="image_high">
      </div>

      <div class="image_university">
      </div>

      <div class="image_graduate_school">
      </div>


    </div>
  </div>
</body>