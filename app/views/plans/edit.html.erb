<header class="header">
  <div class="header_left">
    <h1>プラン<%=@plan.id%>の編集</h1>
  </div>
  <div class="header_right">
    <ul class="nav-lists  ">
      <li class="nav_list"></li>
      <li class="nav_list"><%= link_to '戻る', root_path %></li>
    </ul>
  </div>
</header>

<body>
  <div class="body_register">
    <div class="body_register_left">
      <%= form_with(model: @plan, local: true) do |f| %>
        <div class = 'payment'>
            <div class = 'kind_of_school nursery'>
              <h2>保育園</h2>
              <div class = 'pulldown'>
                <p class="item_new">・園の種類</p>
                <p class="item_new"><%= f.collection_select(:nursery_id, Nursery.all, :id, :name, {}, {class:"hoge", id:"fuga"}) %></p>
                <p class="item_new">期間</p>
                <p class="item_new"><%= f.collection_select(:nursery_period_id, NurseryPeriod.all, :id, :period, {}, {class:"hoge", id:"fuga"}) %></p>
              </div>
            </div>

            <div class = 'kind_of_school kindergarten'>
              <h2>幼稚園</h2>
              <div class = 'pulldown'>
                <p class="item_new">・園の種類</p>
                <p class="item_new"><%= f.collection_select(:kindergarten_id, Kindergarten.all, :id, :name, {}, {class:"hoge", id:"fuga"}) %></p> 
              </div>
            </div>

            <div class = 'kind_of_school elementary'>
              <h2>小学校</h2>
              <div class = 'pulldown'>
                <p class="item_new">・学校の種類</p>
                <p class="item_new"><%= f.collection_select(:elementary_id, Elementary.all, :id, :name, {}, {class:"hoge", id:"fuga"}) %></p> 
              </div>
              <div class = 'pulldown'>
                <p class="item_new">・習い事①</p>
                <p class="item_new"><%= f.collection_select(:elementary_activity_one_id, ElementaryActivityOne.all, :id, :name, {}, {class:"hoge", id:"fuga"}) %></p> 
                <p class="item_new">期間</p>
                <p class="item_new"><%= f.collection_select(:elementary_activity_one_period_id, ElementaryActivityOnePeriod.all, :id, :period, {}, {class:"hoge", id:"fuga"}) %></p> 
              </div>
              <div class = 'pulldown'>
                <p class="item_new">・習い事②</p>
                <p class="item_new"><%= f.collection_select(:elementary_activity_two_id, ElementaryActivityTwo.all, :id, :name, {}, {class:"hoge", id:"fuga"}) %></p> 
                <p class="item_new">期間</p>
                <p class="item_new"><%= f.collection_select(:elementary_activity_two_period_id, ElementaryActivityTwoPeriod.all, :id, :period, {}, {class:"hoge", id:"fuga"}) %></p> 
              </div>
            </div>

            <div class = 'kind_of_school junior_high'>
              <h2>中学校</h2>
              <div class = 'pulldown'>
                <p class="item_new">・学校の種類</p>
                <p class="item_new"><%= f.collection_select(:junior_high_id, JuniorHigh.all, :id, :name, {}, {class:"hoge", id:"fuga"}) %></p> 
              </div>
              <div class = 'pulldown'>
                <p class="item_new">・部活</p>
                <p class="item_new"><%= f.collection_select(:junior_high_club_id, JuniorHighClub.all, :id, :name, {}, {class:"hoge", id:"fuga"}) %></p> 
                <p class="item_new">期間</p>
                <p class="item_new"><%= f.collection_select(:junior_high_club_period_id, JuniorHighClubPeriod.all, :id, :period, {}, {class:"hoge", id:"fuga"}) %></p> 
              </div>
              <div class = 'pulldown'>  
                <p class="item_new">・習い事</p>
                <p class="item_new"><%= f.collection_select(:junior_high_activity_id, JuniorHighActivity.all, :id, :name, {}, {class:"hoge", id:"fuga"}) %></p> 
                <p class="item_new">期間</p>
                <p class="item_new"><%= f.collection_select(:junior_high_activity_period_id, JuniorHighActivityPeriod.all, :id, :period, {}, {class:"hoge", id:"fuga"}) %></p> 
              </div>
            </div>

            <div class = 'kind_of_school high'>
              <h2>高校</h2>
              <div class = 'pulldown'>
                <p class="item_new">・学校の種類</p>
                <p class="item_new"><%= f.collection_select(:high_id, High.all, :id, :name, {}, {class:"hoge", id:"fuga"}) %></p> 
              </div>
              <div class = 'pulldown'>  
                <p class="item_new">・部活</p>
                <p class="item_new"><%= f.collection_select(:high_club_id, HighClub.all, :id, :name, {}, {class:"hoge", id:"fuga"}) %></p> 
                <p class="item_new">期間</p>
                <p class="item_new"><%= f.collection_select(:high_club_period_id, HighClubPeriod.all, :id, :period, {}, {class:"hoge", id:"fuga"}) %></p> 
              </div>
              <div class = 'pulldown'> 
                <p class="item_new">・習い事</p>
                <p class="item_new"><%= f.collection_select(:high_activity_id, HighActivity.all, :id, :name, {}, {class:"hoge", id:"fuga"}) %></p> 
