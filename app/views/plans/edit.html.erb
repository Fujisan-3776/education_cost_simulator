              </div>
              <div class = 'pulldown'>
                <p class="item_new">・大学受験</p>
                <p class="item_new"><%= f.collection_select(:high_examination_id, HighExamination.all, :id, :name, {}, {class:"hoge", id:"fuga"}) %></p> 
              </div>
            </div>

            <div class = 'kind_of_school university'>
              <h2>大学</h2>
              <div class = 'pulldown'>
                <p class="item_new">・学校の種類</p>
                <p class="item_new"><%= f.collection_select(:university_id, University.all, :id, :name, {}, {class:"hoge", id:"fuga"}) %></p> 
              </div>
              <div class = 'pulldown'>  
                <p class="item_new">・部活</p>
