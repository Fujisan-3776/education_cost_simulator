                <p class="item_new"><%= f.collection_select(:university_club_period_id, UniversityClubPeriod.all, :id, :period, {}, {class:"hoge", id:"fuga"}) %></p> 
              </div>
              <div class = 'pulldown'> 
                <p class="item_new">・仕送り</p>
                <p class="item_new"><%= f.collection_select(:university_money_transfer_id, UniversityMoneyTransfer.all, :id, :name, {}, {class:"hoge", id:"fuga"}) %></p> 
                <p class="item_new">期間</p>
                <p class="item_new"><%= f.collection_select(:university_money_transfer_period_id, UniversityMoneyTransferPeriod.all, :id, :period, {}, {class:"hoge", id:"fuga"}) %></p> 
