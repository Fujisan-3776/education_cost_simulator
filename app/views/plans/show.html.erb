<header>
  <div class="header_left">
    <h1 class="title">シミュレーション結果</h1>
  </div>
  <div class="header_right">
    <ul class="nav-lists">
      <li><%= link_to 'トップへ', root_path %></li>
      <% if user_signed_in? && current_user.id == @plan.user.id%>
      <li><%= link_to '編集する', edit_plan_path(@plan.id), method: :get %></li>
